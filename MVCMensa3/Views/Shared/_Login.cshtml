
@model MVCMensa3.Models.LoginFeedback

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <fieldset class="feld1">
        <legend>Login</legend>
        <div>
            @if (!string.IsNullOrEmpty(Model.ErrorInfo))
            {
                <div class="alert alert-danger">
                    @Model.ErrorInfo
                </div>
            }
            <input type="text" class="form-control" id="user" name="user" @(string.IsNullOrEmpty(Model.SavedUser) ? "" : string.Format("value={0}", Model.SavedUser)) placeholder="Benutzer" />
            <input type="password" class="form-control" id="password" name="password" placeholder="*******" />
            <button type="submit" class="btn btn-default">Anmelden</button>
        </div>
    </fieldset>
}
<p>
    Melden Sie sich jetzt an, um die wirklich viel günstigeren Preise für Mitarbeiter und Stundenten zu sehen.
</p>