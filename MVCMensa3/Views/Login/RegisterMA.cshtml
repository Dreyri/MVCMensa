@model MVCMensa3.Models.MARegistration

@{
    ViewBag.Title = "Registration MA";
}

@using (Html.BeginForm("RegisterMA", "Login"))
{
    @Html.ValidationSummary(true);
    @Html.Partial("~/Views/Shared/_Registration.cshtml", Model)

    <fieldset class="feld1">
        <legend>Mitarbeiter</legend>
        <div class="form-group">
            @Html.LabelFor(m => m.Buero)
            @Html.EditorFor(m => m.Buero, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Buero, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Telefon)
            @Html.EditorFor(m => m.Telefon, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Telefon, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-default">Registrieren</button>

    </fieldset>
}
