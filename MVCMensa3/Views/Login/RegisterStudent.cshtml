@model MVCMensa3.Models.StudentRegistration

@{
    ViewBag.Title = "Registration Student";
}

@using (Html.BeginForm("RegisterStudent", "Login"))
{
    @Html.ValidationSummary(true);
    @Html.Partial("~/Views/Shared/_Registration.cshtml", Model)

    <fieldset class="feld1">
        <legend>Student</legend>
        <div class="form-group">
            @Html.LabelFor(m => m.Studiengang)
            @Html.EditorFor(m => m.Studiengang, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Studiengang, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Matrikelnummer)
            @Html.EditorFor(m => m.Matrikelnummer, new { htmlAttributes = new { @class = "form-control"}})
            @Html.ValidationMessageFor(m => m.Matrikelnummer, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-default">Registrieren</button>

    </fieldset>
}
