@model MVCMensa3.Models.GastRegistration
@{
    ViewBag.Title = "Registration Gast";
}

@using (Html.BeginForm("RegisterGast", "Login"))
{
    @Html.ValidationSummary(true);
    @Html.Partial("~/Views/Shared/_Registration.cshtml", Model)

<fieldset class="feld1">
    <legend>Gast</legend>
    <div class="form-group">
        @Html.LabelFor(m => m.Grund)
        @Html.EditorFor(m => m.Grund, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Grund, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-default">Registrieren</button>

</fieldset>
}
